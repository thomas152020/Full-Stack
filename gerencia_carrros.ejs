<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Gerenciar Carros</title>

    <link rel="stylesheet" href="/lab10.css">
</head>
<body>

<nav>
    <a href="/login">Login</a> |
    <a href="/cadastro">Cadastro</a> |
    <a href="/carros">Carros Disponíveis</a>
</nav>

<h1>Gerenciamento de Carros</h1>

<hr>

<h2>Cadastrar Novo Carro</h2>
<form action="/carros/novo" method="POST">
    <label>Marca:</label><br>
    <input type="text" name="marca" required><br><br>

    <label>Modelo:</label><br>
    <input type="text" name="modelo" required><br><br>

    <label>Ano:</label><br>
    <input type="number" name="ano" required><br><br>

    <label>Quantidade:</label><br>
    <input type="number" name="qtde_disponivel" required><br><br>

    <button type="submit">Cadastrar</button>
</form>

<hr>

<h2>Atualizar Carro</h2>
<form action="/carros/atualizar" method="POST">

    <label>Selecione o carro:</label><br>
    <select name="id" required>
        <% carros.forEach(function(c){ %>
            <option value="<%= c._id %>"><%= c.modelo %> - <%= c.ano %></option>
        <% }) %>
    </select><br><br>

    <label>Novo Preço (opcional):</label><br>
    <input type="number" name="novo_preco"><br><br>

    <label>Nova Quantidade (opcional):</label><br>
    <input type="number" name="nova_qtde"><br><br>

    <button type="submit">Atualizar</button>
</form>

<hr>

<h2>Remover Carro</h2>
<form action="/carros/remover" method="POST">

    <label>Selecione o carro:</label><br>
    <select name="id" required>
        <% carros.forEach(function(c){ %>
            <option value="<%= c._id %>"><%= c.modelo %> - <%= c.ano %></option>
        <% }) %>
    </select><br><br>

    <button type="submit" style="background:red;color:white;">Remover</button>
</form>

<hr>

<h2>Vender Carro</h2>
<form action="/carros/vender" method="POST">

    <label>Selecione o carro:</label><br>
    <select name="id" required>
        <% carros.forEach(function(c){ %>
            <option value="<%= c._id %>">
                <%= c.modelo %> - (<%= c.qtde_disponivel %> disponíveis)
            </option>
        <% }) %>
    </select><br><br>

    <button type="submit">Vender</button>
</form>

</body>
</html>
